@font-face
  font-family: 'MK-Amour Beaucoup'
  src: url('../assets/fonts/MK-Amour-Beaucoup.woff') format('woff')
  font-weight: normal
  font-style: normal

@font-face
  font-family: 'Monument Grotesk'
  src: url('../assets/fonts/MonumentGroteskTrial-Regular.woff') format('woff')
  font-weight: normal
  font-style: normal

@font-face
  font-family: 'Monument Grotesk'
  src: url('../assets/fonts/MonumentGroteskTrial-Bold.woff') format('woff')
  font-weight: bold
  font-style: normal

$ROOT_FONT_SIZE = 32px
$CANONIC_SCREEN_WIDTH = 1440px

pxToRem(px)
  (px / $ROOT_FONT_SIZE) rem

html
  font-size: ($ROOT_FONT_SIZE / $CANONIC_SCREEN_WIDTH * 100) vw

html,
body
  font-family: 'Monument Grotesk', arial, sans-serif
  font-weight: normal

body
  padding: pxToRem(150) pxToRem(25) pxToRem(25)

.center
  text-align: center

.amour
  font-family: 'MK-Amour Beaucoup'

.uppercase
  text-transform: uppercase

.xxl
  font-size: pxToRem(90)
  font-weight: normal
  line-height: 84.4%
  text-transform: uppercase

.xl
  font-size: pxToRem(64)
  font-weight: normal
  line-height:  84.4%
  text-transform: uppercase

.l
  font-size: pxToRem(45)
  font-weight: normal
  line-height: 84.4%
  text-transform: uppercase

.m
  font-size: pxToRem(32)
  font-weight: bold
  line-height: 84.4%

.essay
  display: block

.essay + .essay
  margin-top: pxToRem(150)

.moss
  color: #255823

.witch
  color: #6C47A6

.blood
  color: #E92D18

.swamp
  color: #4BA689

header
  position: fixed
  top: pxToRem(10)
  left: 0
  width: 100%
  display: flex
  justify-content: space-between
  align-items: center
  padding: 0 pxToRem(25)

main
  max-width: pxToRem(1187)
  margin: 0 auto
  // position: relative

h2
  transition: color 0.2s ease

a
  cursor: pointer

a h2:after
  content: 'â†—'

footer
  margin-top: pxToRem(200)

.footer-top
  display: flex
  justify-content: space-between
  margin-bottom: pxToRem(173)

.credits > div + div
  margin-top: pxToRem(38)

.credits a
  margin-top: pxToRem(14)
  display: block

.excerpts
  position: fixed
  left: 0
  bottom: pxToRem(150)
  width: 100vw
  pointer-events: none
  text-align: center
  padding: 0 pxToRem(100)
